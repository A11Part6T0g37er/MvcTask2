<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/Site1.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar bg-light">
        <div class="row">
            <div class="col-3">
                <img class="img-fluid" src="~/Content/photo1.jpg" />
            </div>
            <div class="col-2"></div>
            <div class="col-7 justify-content-center">
                <h1>My site</h1>

            </div>
         
                @Html.ActionLink("Главная", "Index", "Home", new { @class = "page-link" })
                @Html.ActionLink("Гостевая", "Guest", "Home", new { @class = "page-link" })
                @Html.ActionLink("Анкета", "Anceta", "Home", new { @class = "page-link" })
           
        </div>
    </nav>
    <main class="main">
        <div class="row">

            @RenderBody()

        </div>
    </main>
    <footer class="navbar bg-dark">
        <div class="container">

            <p class="float-left">© \m/</p>
            <p class="float-right">
                <a href="#">Back to top</a>
            </p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
